{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=VideGreniers_Dev;Username=videgren_dev;Password=dev_password_123"
  },
  "JwtSettings": {
    "Secret": "dev-super-secret-jwt-key-for-development-only-32-chars",
    "Issuer": "VideGreniers.API.Dev",
    "Audience": "VideGreniers.Client.Dev",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 30
  },
  "OAuth": {
    "Google": {
      "ClientId": "dev-google-client-id",
      "ClientSecret": "dev-google-client-secret"
    },
    "Apple": {
      "TeamId": "dev-apple-team-id",
      "ClientId": "dev-apple-client-id", 
      "KeyId": "dev-apple-key-id"
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://localhost:3001",
      "http://localhost:8080",
      "https://localhost:8080"
    ]
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3} {CorrelationId}] {SourceContext} {Message:lj} {NewLine}{Exception}"
        }
      },
      {
        "Name": "File", 
        "Args": {
          "path": "logs/dev/videgren-api-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff} {Level:u3} {CorrelationId}] {SourceContext} {Message:lj} {NewLine}{Exception}",
          "retainedFileCountLimit": 7
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  }
}
